        <!--        <property name="car" ref="car"></property>-->
        <!-- constructor-arg标签表示，让Spring通过构造方法注入-->
        <!--        <constructor-arg ref="car"></constructor-arg>-->
    </bean>

    <bean id="car" class="cn.lastwhisper.xml.bean.Car"></bean>

</beans>